<h3><i class="fa fa-angle-right"></i> Articulos creados por usuarios</h3>
<br />
<div class="col-md-12">
    <div class="content-panel">
        <h4><i class="fa fa-angle-right"></i> Lista de articulos creados</h4>
        <hr>
      <table class="table">
          <thead>
          <tr>
            <th>Nombre del articulo</th>
            <th>User id</th>
            <th>Date</th>
            <th>Descripcion</th>  
            <th>Articulo</th>         
          </tr>
          </thead>

          <tbody>
          <% @articles.each do |article| %>
            <tr>
              <td><%= article.name %></td>
              <td><%= article.user_id %></td>
              <td><%= article.date %></td>
              <td><%= article.decription %></td>
              <td><%= article.attachment %></td>
              <td><%= link_to 'Ver', document_article_path(:document_id, article) %></td>
              <td><%= link_to 'Modificar', edit_document_article_path(:document_id, article) %></td>
              <td><%= link_to 'Eliminar', document_article_path(:document_id, article), method: :delete, 
                              data: {confirm: 'Esta seguro de eliminar este articulo'} %></td>
            </tr>
          <% end %>
          </tbody>
      </table>
      <%=link_to 'Crear nuevo Articulo', new_document_article_path(:document_id)  %>
    </div><! --/content-panel -->
</div><!-- /col-md-12 -->