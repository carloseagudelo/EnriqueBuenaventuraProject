<div class="panel panel-default">
    <div class="col-md-12">
        <h3 style="text-align: center"><i class="glyphicon glyphicon-italic"></i> Lista de prosas base</h3>
            <hr>
    </div>
    <div class="content-panel">
        <hr>
      <table class="table">
          <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>         
          </tr>
          </thead>

          <tbody>
          <% @proses.each do |prose| %>
            <tr>
              <td><%= prose.name %></td>
              <td><%= truncate(prose.description, :length => 100) %></td>

              <%if current_user.has_role?(:admin)%>
              <td>
                <%= link_to prose_path(prose), :title=>"Ver" do%>
                  <i class="glyphicon glyphicon-eye-open" ></i>
                <%end%>
              </td>              
              <td>
                <%= link_to edit_prose_path(prose), :title=>"Editar" do%>
                  <i class="glyphicon glyphicon-wrench" ></i>
                <%end%>
              </td>
              <%end%>                           
            </tr>
          <% end %>
          </tbody>
      </table>
    </div>
</div>