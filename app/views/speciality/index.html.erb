<div class="panel panel-default">
    <div class="col-md-12">
        <h3 style="text-align: center"><i class="glyphicon glyphicon-tags"></i> Lista de tipos de documetos</h3>
            <hr>
    </div>
    <div class="content-panel">
        <hr>
      <table class="table">
          <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>         
          </tr>
          </thead>

          <tbody>
          <% @specialities.each do |speciality| %>
            <tr>
              <td><%= speciality.name %></td>
              <td><%= truncate(speciality.description, :length => 100) %></td>
              <%if current_user.has_role?(:admin)%>
              <td>
                <%= link_to speciality_path(speciality), :title=>"Ver" do%>
                  <i class="glyphicon glyphicon-eye-open" ></i>
                <%end%>
              </td>
              <td>
                <%= link_to edit_speciality_path(speciality), :title=>"Editar" do%>
                  <i class="glyphicon glyphicon-wrench" ></i>
                <%end%>
              </td>              
              <%end%>                           
            </tr>
          <% end %>
          </tbody>
      </table>
    </div>
</div>