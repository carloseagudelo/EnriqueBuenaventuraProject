<h3><i class="fa fa-angle-right"></i>Tipo de Documento</h3>
<br />
<div class="col-md-12">
    <div class="content-panel">
        <h4><i class="fa fa-angle-right"></i>Lista de los tipos de documentos que se pueden usar</h4>
        <hr>
      <table class="table">
          <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>         
          </tr>
          </thead>

          <tbody>
          <% @specialities.each do |speciality| %>
            <tr>
              <td><%= speciality.name %></td>
              <td><%= speciality.description %></td>

              <%if current_user.has_role?(:admin)%>
                <td><%= link_to 'EDITAR', edit_speciality_path(speciality) %></td>
                <td><%= link_to 'ELIMINAR', speciality_path(speciality), method: :delete, 
                              data: {confirm: 'Esta seguro de eliminar este articulo'} %></td>
                <td><%= link_to 'VER', speciality_path(speciality) %></td> 
              <%end%>                           
            </tr>
          <% end %>
          </tbody>
      </table>
    </div>
</div>