<div class="panel panel-default">
    <div class="panel-heading">
        <h3 style="text-align: center"><i class="glyphicon glyphicon-tags"></i> Modificar el tipo de documento <strong><%=@speciality.name%></h3>
    </div>
    <div class="panel-body">   
        <%= form_for :speciality, url: speciality_path(@speciality), method: :patch do |f| %>
            
            <div class="form-group col-xs-9">
                <%= f.label :Nombre_del_tipo_de_documento %><br />
                <%= f.text_field :name, autofocus: true, placeholder: 'Digita nombre del nuevo documento',:class=>"form-control" %>
            </div>
            
            <div class="form-group col-xs-9">
                <%= f.label :Descripcion %><br />
                <%=f.text_area :description, autofocus: true, placeholder: 'Digita una breve descripciÃ³n del tipo de documento ',:class=>"form-control"%>
            </div>  

            <div class="form-group col-xs-12">
                <%= f.submit "guardar", :class=>"btn btn-primary"%>
                 <%= link_to 'Atras', speciality_index_path, :class=>"btn btn-primary" %>
            </div>
            
        <% end %>

                        
    </div>
</div>