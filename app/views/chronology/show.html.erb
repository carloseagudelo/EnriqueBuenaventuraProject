<div class="panel panel-default">

    <div class="panel-heading">
        <h3 style="text-align: center"><i class="glyphicon glyphicon-th-list"></i> Detalle de la palabara <strong><%=@chronology.event%></h3>
    </div>
    <div class="panel-body"> 


        <div class="row" style="padding-top: 10px; padding-right: 30px; padding-bottom: 10px; padding-left: 80px;" >
            <div class="col-xs-6 col-md-3"><strong>Fecha del evento:</strong></div>
            <div class="col-xs-6 col-md-3"><%t = @chronology.date%> <%= t.day.to_s + " " + t.strftime("%b") %><%= t.strftime("%Y") %></div>
            <div class="col-xs-6 col-md-3"><strong>Descripcion:</strong></div>
            <div class="col-xs-6 col-md-3"><%= @chronology.descripton %></div>
        </div>

        <%if @chronology.url? %>
            <div class="row" style="padding-top: 10px; padding-right: 30px; padding-bottom: 10px; padding-left: 80px;" >                
                <div class="col-xs-6 col-md-12 centered"><strong>Video</strong></div>
                <div class="col-xs-6 col-md-12 centered" >                
                    <object width="420" height="345"
                        data="https://youtube.com/embed/<%= @chronology.url %>">
                    </object>         
                </div>
            </div>
        <%end%>       
              
        <div class="row" style="padding-top: 10px; padding-right: 30px; padding-bottom: 10px; padding-left: 80px;">
            <div class="col-xs-6 col-md-12 centered"><strong>Imagen(es):</strong></div> 
            <% @chronology.photos.each do |photo| %>       
                <div class="col-sm-6 col-md-3">
                    <%= image_tag photo.image.url(:thumb).to_s %>
                    <%=link_to "Ver imagen", photo.image.url %>
                </div>
            <%end%> 
        </div>
            
        <div class="row" style="padding-top: 10px; padding-right: 30px; padding-bottom: 10px; padding-left: 80px;">
            <div class="col-xs-6 col-md-12 centered">
                <%= link_to 'Atras', chronology_index_path, :class=>"btn btn-primary" %>
            </div> 
        </div>                        
    </div>
</div>