<div class="panel panel-default">
  <div class="panel-heading">
    <h3 style="text-align: center"><i class="glyphicon glyphicon-italic">Nuevo tipo de documento</i>
    </div>
        <div class="panel-body">
            <%= form_for :cronology, url: chronology_index_path, :html => {:multipart => true} do |f| %> 

              <div class="form-group col-xs-9">
                <strong><b><h2><font size="3" color="red"><%= notice %></font></h2></b></strong>
              </div>

              <div class="form-group col-xs-9">
                <%= f.label :Fecha_evento %><br /> 
                <%= f.date_field :date, autofocus: true,:class=>"form-control" %>
              </div>

              <div class="form-group col-xs-9">
                <%= f.label :Nombre_del_evento %><br />
                <%= f.text_field :event, placeholder: 'Digita  la descripcion del tipo de documento',:class=>"form-control" %>
              </div>

              <div class="form-group col-xs-9">
                <%= f.label :Descripcion  %><br /> 
                <%= f.text_area :descripton, autofocus: true, placeholder: 'Digita nombre del tipo de documento',:class=>"form-control" %>
              </div>

              <div class="form-group col-xs-9">
                <%= f.label :Tipo_de_suceso %><br /> 
                <%= f.collection_select(:type_id, Type.all, :id, :name, {:prompt => 'Seleccione un tipo de suceso'}, { :class =>"form-control", :selected => params[:id]}) %>
              </div>

              <div class="form-group col-xs-9">
                <%= f.label :Codigo_del_video_en_YouTube %><br />
                <%= f.text_field :url, placeholder: 'URL del video en caso de tener',:class=>"form-control" %>
              </div>

              <div class="form-group col-xs-9">
                <%= f.label :Imagen %><br /> 
                <%= file_field_tag "images[]",  type: :file, :class=>"form-control",  multiple: true%>
                <p class="help-block">Solo se permiten imagenes</p>
              </div>
                
               <div class="form-group col-xs-9">
                    <%= f.submit "Guardar", :class=>"btn btn-primary"%>
                </div>
            <% end %>
        </div>
     </div>
</div>