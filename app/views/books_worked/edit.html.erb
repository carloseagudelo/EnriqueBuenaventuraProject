
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 style="text-align: center"><i class="glyphicon glyphicon-book"></i> Modificar el libro <strong><%=@book.name%></h3>
    </div>
    <div class="panel-body">   
        <%= form_for :book, url: books_worked_path(@book), method: :patch do |f| %>
            
            <div class="form-group col-xs-9">
                <%= f.label :nombre_del_libro %><br />
                <%= f.text_field :name, autofocus: true, placeholder: 'Digita nombre del libro',:class=>"form-control" %>
            </div>
            
            <div class="form-group col-xs-9">
                <%= f.label :Descripcion %><br />
                <%=f.text_area :description, placeholder: 'Digita  la descripcion del libro',:class=>"form-control",:rows =>10,:style=>"resize:vertical"%>
            </div>  

            <div class="form-group col-xs-12">
                <%= f.submit "guardar", :class=>"btn btn-primary"%>
                 <%= link_to 'Atras', books_worked_index_path, :class=>"btn btn-primary" %>
            </div>
            
        <% end %>                        
    </div>
</div> 