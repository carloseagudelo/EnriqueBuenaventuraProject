<div id="login-page">    
  <%= form_for(resource, as: resource_name,  url: session_path(resource_name), html: { class: "form-login" }) do |f| %>
  <%= devise_error_messages! %>
    <h2 class="form-login-heading">Inciar Sesión</h2>
    <div class="login-wrap">

      <%= f.email_field :email, autofocus: true, placeholder: 'Correo electronico',:class=>"form-control"%><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Contraseña' ,:class=>"form-control" %>
      <label class="checkbox">
        <span class="pull-right">
          <%= link_to "¿No recuerdas tu contraseña?", new_password_path(resource_name) %>
        </span>
      </label>
      <%= f.submit "Iniciar Sesión", :class=>"btn btn-theme btn-block" %><br/>

      <div class="registration">
        No tienes una cuenta activa<br/>
        <%= link_to "Crea una cuenta", new_registration_path(resource_name) %>
      </div>

  <% end %>
</div>             
<script>
  $.backstretch(["<%= asset_path '01.jpg' %>", "<%= asset_path '02.jpg' %>", "<%= asset_path '03.jpg' %>", "<%= asset_path '04.jpg' %>"], {speed: 3000, fade: 750});
</script>
