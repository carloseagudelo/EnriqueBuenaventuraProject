<div id="login-page">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-register"} ) do |f| %>
    <h2 class="form-login-heading">Registrarse</h2>
    <div class="login-wrap">
      <% if devise_error_messages! %>
        <strong><b><h2><font size="3" color="red"><p>La informaci칩n ingresada tiene errores</p></font></h2></b></strong>
      <%end%>
      <%= f.text_field :name, autofocus: true, placeholder: 'Nombre completo', :class=>"form-control" %><br />
      <%= f.text_field :credential, placeholder: 'Numero de documento de identificaci칩n', :class=>"form-control" %><br />
      <%= f.email_field :email, placeholder: 'Correo electronico', :class=>"form-control" %><br />
      <%= f.text_field :subject, placeholder: 'Curso matriculado, ejemplo: Teatro',:class=>"form-control" %><br />
      <%= f.number_field :level, placeholder: 'Nivel academico actual',:class=>"form-control" %><br />
      <%= f.number_field :semester, placeholder: 'Semestre actual',:class=>"form-control" %><br />
      <%= f.text_area :interest, placeholder: 'Intereses en la plataforma',:class=>"form-control",:rows =>5,:style=>"resize:vertical" %><br />
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Contrase침a' ,:class=>"form-control" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Verifique contrase침a' ,:class=>"form-control" %><br />
      <%= f.submit "Registrase", :class=>"btn btn-theme btn-block" %>
    </div>
  <% end %>
</div>
<script>
  $.backstretch(["<%= asset_path 'fondoresgistro.jpg' %>"], {speed: 3000});
</script>
