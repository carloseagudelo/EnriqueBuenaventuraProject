<div id="login-page">  
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-register"}) do |f| %>
    <%= devise_error_messages! %>
    <h2 class="form-login-heading">Recuperar contrase√±a</h2>
    <div class="login-wrap">
      <%= f.email_field :email, autofocus: true, placeholder: 'Correo electronico',:class=>"form-control" %><br />
      <%= f.submit "Enviar Instrucciones", :class=>"btn btn-theme btn-block" %><br />
      <%= link_to "Iniciar Sesion", new_session_path(resource_name) %> &nbsp;  &nbsp;  &nbsp;  &nbsp; 
      <%= link_to "Registrarse", new_registration_path(resource_name) %>
    </div>

  <% end %>

</div>

