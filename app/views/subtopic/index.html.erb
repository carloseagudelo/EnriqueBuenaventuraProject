<div class="panel panel-default">
    <div class="col-md-12">
        <h3 style="text-align: center"><i class="glyphicon glyphicon-list-alt"></i> Lista de subtemas</h3>
        <hr>
    </div>
    <div class="content-panel">
    <hr>
      <table class="table">
          <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>         
          </tr>
          </thead>

          <tbody>
          <% @subtopics.each do |subtopic| %>
            <tr>
              <td><%= subtopic.name %></td>
              <td><%= truncate(subtopic.description, :length => 100) %></td>

              <%if current_user.has_role?(:admin)%>
              <td>
                <%= link_to subtopic_path(subtopic), :title=>"Ver" do%>
                  <i class="glyphicon glyphicon-eye-open" ></i>
                <%end%>
              </td>
              <td>
                <%= link_to edit_subtopic_path(subtopic), :title=>"Editar" do%>
                  <i class="glyphicon glyphicon-wrench" ></i>
                <%end%>
              </td>             
              <%end%>                           
            </tr>
          <% end %>
          </tbody>
      </table>
    </div>
</div>