<br />
<div class="panel panel-default">
    <div class="col-md-12">
        <h3 style="text-align: center"><i class="glyphicon glyphicon-list-alt"></i> Lista de subtemas</h3>
        <hr>
    </div>
    <div class="content-panel">
    <hr>
      <table class="table">
          <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>         
          </tr>
          </thead>

          <tbody>
          <% @subtopics.each do |subtopic| %>
            <tr>
              <td><%= subtopic.name %></td>
              <td><%= truncate(subtopic.description, :length => 100) %></td>

              <%if current_user.has_role?(:admin)%>
                <td><%= link_to 'VER', subtopic_path(subtopic) %></td> 
                <td><%= link_to 'EDITAR', edit_subtopic_path(subtopic) %></td>
                <td><%= link_to 'ELIMINAR', subtopic_path(subtopic), method: :delete, 
                              data: {confirm: 'Esta seguro de eliminar este articulo'} %></td>                
              <%end%>                           
            </tr>
          <% end %>
          </tbody>
      </table>
    </div>
</div>