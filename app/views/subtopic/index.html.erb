<h3><i class="fa fa-angle-right"></i>Subtema</h3>
<br />
<div class="col-md-12">
    <div class="content-panel">
        <h4><i class="fa fa-angle-right"></i>Lista de los subtemas que se pueden usar</h4>
        <hr>
      <table class="table">
          <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>         
          </tr>
          </thead>

          <tbody>
          <% @subtopics.each do |subtopic| %>
            <tr>
              <td><%= subtopic.name %></td>
              <td><%= subtopic.description %></td>

              <%if current_user.has_role?(:admin)%>
                <td><%= link_to 'EDITAR', edit_subtopic_path(subtopic) %></td>
                <td><%= link_to 'ELIMINAR', subtopic_path(subtopic), method: :delete, 
                              data: {confirm: 'Esta seguro de eliminar este articulo'} %></td>
                <td><%= link_to 'VER', subtopic_path(subtopic) %></td> 
              <%end%>                           
            </tr>
          <% end %>
          </tbody>
      </table>
    </div>
</div>