<br />
<div class="panel panel-default">
    <div class="col-md-12">
        <h3 style="text-align: center"><i class="glyphicon glyphicon-file"></i> Lista de documentos disponibles</h3>
        <%if current_user.has_role?(:student)%>
            <br />
        <%end%>
    </div>
    <div class="col-md-12">
       <div class="row">
          <div class="col-lg-6">
            <div class="input-group">
              <input type="text" name="nameDoc" class="form-control" placeholder="Buscar por nombre de documento">
              <span class="input-group-btn">
                <button class="btn btn-default" type="button">Buscar</button>
              </span>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="input-group">
              <input type="text" name="yearDoc" class="form-control" placeholder="Buscar por aÃ±o de puclicacion" >
              <span class="input-group-btn">
                <button class="btn btn-default" type="button">Buscar</button>
              </span>
            </div>
          </div>
        </div>
        <hr>
    </div>
    <div class="content-panel">
      <table class="table">
          <thead>
          <tr>
            <th>Fecha de creacion</th>
            <th>Nombre del documento</th>
            <th>Descripcion</th>
          </tr>
          </thead>

          <tbody>

            <% @documents.each do |document| %>
              <tr>
                <td><% t=  document.date %> <%= t.day.to_s + " " + t.strftime("%b") %> <%= t.strftime("%Y") %></td>
                <td><%= document.name %></td>
                <td><%= truncate(document.description, :length => 100) %></td>
                <td>
                <%= link_to document_path(document) do%>
                  <i class="glyphicon glyphicon-eye-open" ></i>
                <%end%> 
                </td>

                <% if current_user.has_role?(:admin) %>  
                    <td>                      
                      <%= link_to edit_document_path(document) do%>
                        <i class="glyphicon glyphicon-wrench" ></i>
                      <%end%> 
                    </td>
                    <td>
                        <%= link_to document, method: :delete, data: {confirm: 'Esta seguro de eliminar este tag'} do%>
                          <i class="glyphicon glyphicon-trash" ></i>
                        <%end%> 
                    </td>
                <% end %>      
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
</div>



