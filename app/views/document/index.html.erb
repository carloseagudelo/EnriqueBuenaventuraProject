<table>
  <tr>
    <th>Nombre del documento</th>
    <th>Descripcion</th>
    <th>Fecha de creacion</th>
    <th>Autor</th>
    <th>Documento</th>
  </tr>
 
  <% @documents.each do |document| %>
    <tr>
      <td><%= document.name %></td>
      <td><%= document.description %></td>
      <td><%= document.date %></td>
      <td><%= document.autor %></td>

      <td><%= link_to "Ver Documento", document.attachment_url %></td>

      <% if current_user.has_role?(:admin) %>  
          <td><%= link_to 'Editar', edit_document_path(document) %></td>
          <td><%= link_to 'Eliminar', document, method: :delete, 
                      data: {confirm: 'Esta seguro de eliminar este tag'} %></td>
      <% end %> 
      
      
      
    </tr>
  <% end %>
</table>



