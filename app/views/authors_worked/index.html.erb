<h3><i class="fa fa-angle-right"></i> Autores trabajados por Enrique Buenaventura </h3>
<br />
<div class="col-md-12">
    <div class="content-panel">
        <h4><i class="fa fa-angle-right"></i> Autores</h4>
        <hr>
      <table class="table">
          <thead>
          <tr>
            <th>Nombre</th>
            <th>Descripcion</th>         
          </tr>
          </thead>

          <tbody>
          <% @authors.each do |author| %>
            <tr>
              <td><%= author.name %></td>
              <td><%= author.description %></td>

              <%if current_user.has_role?(:admin)%>
                <td><%= link_to 'EDITAR', edit_authors_worked_path(author) %></td>
                <td><%= link_to 'ELIMINAR', authors_worked_path(author), method: :delete, 
                              data: {confirm: 'Esta seguro de eliminar este articulo'} %></td>
              <%end%>

              <td><%= link_to 'VER', authors_worked_path(author) %></td>              
            </tr>
          <% end %>
           </tbody>
      </table>
    </div>
</div>