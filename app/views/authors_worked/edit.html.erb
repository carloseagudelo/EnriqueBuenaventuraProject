<div class="panel panel-default">
    <div class="panel-heading">
        <h3 style="text-align: center"><i class="glyphicon glyphicon-font"></i> Modificar el autor <strong><%=@author.name%></h3>
    </div>
    <div class="panel-body">   
        <%= form_for :author, url: authors_worked_path(@author), method: :patch do |f| %>
            
            <div class="form-group col-xs-9">
                <%= f.label :nombre_del_autor %><br />
                <%= f.text_field :name, autofocus: true, placeholder: 'Digita nombre del nuevo documento',:class=>"form-control" %>
            </div>
            
            <div class="form-group col-xs-9">
                <%= f.label :Descripcion %><br />
                <%=f.text_area :description, placeholder: 'Digita una breve descripciÃ³n del tipo de documento ',:class=>"form-control"%>
            </div>  

            <div class="form-group col-xs-12">
                <%= f.submit "guardar", :class=>"btn btn-primary"%>
                <%= link_to 'Atras', authors_worked_index_path, :class=>"btn btn-primary" %>
            </div>
            
        <% end %>                        
    </div>
</div>

