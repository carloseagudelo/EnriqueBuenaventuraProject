<br />
<div class="panel panel-default">
  <%if current_user.has_role?(:student)%>
    <br />
  <%end%>
    <div class="col-md-12">
        <h3 style="text-align: center"><i class="glyphicon glyphicon-user"></i> Lista de usuarios activos</h3>
        <br />
    </div>
    <div class="col-md-12">      
      <div class="row">
        <div class="col-lg-6">          
          <%= form_tag(students_path, :method => "get", class: "input-group", id: "search-form") do %>
            <%= text_field_tag :searchS, params[:searchS], :class=>"form-control", placeholder: "Buscar usuario por documento"%>
            <span class="input-group-btn">
              <button class="btn btn-default" type="submit">Buscar</i></button>
            </span>
          <% end %>
        </div>
      </div>
      <hr>
      <%if current_user.has_role?(:student)%>
        <br />
      <%end%>
    </div>
    <div class="content-panel">
      <table class="table">
          <thead>
          <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Credencial</th>
          </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <% if user.has_role?(:student) %>
                <tr>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.credential %></td>
                  <td>
                    <%= link_to edit_student_path(user) do%>
                      <i class="glyphicon glyphicon-eye-open" ></i>
                    <%end%> 
                  </td>
                  <td>
                      <%= link_to students_path, method: :delete, data: {confirm: 'Esta seguro de eliminar este usuario'} do%>
                        <i class="glyphicon glyphicon-trash" ></i>
                      <%end%> 
                  </td>
                </tr>
              <%end%>
            <% end %>
          </tbody>
      </table>
    </div>
</div>