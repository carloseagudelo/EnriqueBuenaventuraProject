<br />
<div class="panel panel-default">
    <div class="col-md-12">
        <h3 style="text-align: center"><i class="glyphicon glyphicon-user"></i> Lista de usuarios activos</h3>
            <hr>
    </div>
    <div class="content-panel">
      <table class="table">
          <thead>
          <tr>
            <th>Nombre</th>
            <th>Correo</th>
            <th>Credencial</th>
          </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
              <% if user.has_role?(:student) %>
                <tr>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= user.credential %></td>
                  <td>
                    <%= link_to edit_student_path(user) do%>
                      <i class="glyphicon glyphicon-eye-open" ></i>
                    <%end%> 
                  </td>
                  <td>
                      <%= link_to user, method: :delete, data: {confirm: 'Esta seguro de eliminar este tag'} do%>
                        <i class="glyphicon glyphicon-trash" ></i>
                      <%end%> 
                  </td>
                </tr>
              <%end%>
            <% end %>
          </tbody>
      </table>
    </div>
</div>